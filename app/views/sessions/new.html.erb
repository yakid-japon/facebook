<%= render "partials/header-sign" %>

	<div class="container">
		<% flash.each do |key, value| %>
			<%= content_tag(:div, value, class: "alert alert-#{key} text-center") %>
		<% end %>
		<div class="row">
			<div class="col-md-7 reseau">
				<img src="/images/reseau.png" alt="maths" width="100%">
			</div>
			<div class="col-md-5">
				<h2>Connexion</h2><br><br>
				<%= form_with(scope: :session, url: sessions_path, local: true, class: "form-horizontal") do |form| %>
			    <div class="form-group">
			      <div class="col-sm-12">
			       <%= form.email_field :email, class: "form-control", placeholder: "Adresse email"%>
			      </div>
			    </div>
			    <div class="form-group">
			      <div class="col-sm-12">          
			        <%= form.password_field :password, class: "form-control", placeholder: "Mot de passe"%>
			      </div>
			    </div>
			    <div class="form-group">        
			      <div class="col-sm-12">
			        <button type="submit" class="btn btn-primary button">Se connecter</button>
			      </div>
			    </div>
			    <div class="form-group">        
			      <div class="col-sm-12 text-center">
			        <a href="#">Mot de passe oublié ?</a>
			      </div>
			    </div>
			  <% end %>
              <hr style="border: 1px solid gray">
			    <div class="form-group text-center">        
			      <div class="col-sm-12">
			        <button onclick="location.href='/users/new';" type="submit" class="btn btn-success">Créer un compte</button>
			      </div>
			    </div>
			</div>
            <div class="row" style="height: 66px"></div>
		</div>
		<div class="row" style="height: 100px"></div>
	</div>

	<%= render "partials/footer" %>